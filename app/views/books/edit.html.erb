 <% if flash[:notice] %>
   <div class="flash">
     <%= flash[:notice] %>
   </div>
 <% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |book| %>
<h4>Title</h4>
<%= book.text_field :title %>
<h4>Body</h4>
<%= book.text_area :body %>
<%= book.submit "Update Book" %>

<% end %>

<%= link_to "Show" , book_path(@book) %> |
<%= link_to "Back" ,books_path %>

